# LibreChat Configuration
HOST=0.0.0.0
PORT=3000
JWT_SECRET=your_jwt_secret_here_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_secret_here_change_this_in_production

# Database Configuration
MONGO_URI=mongodb://mongo:27017/librechat
MONGODB_URI=mongodb://mongo:27017/librechat
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=librechat

# API Configuration
API_BASE_URL=http://backend:8000
API_KEY=your_api_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Security
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_ANONYMOUS_CHAT=false

# Features
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOAD=true
MAX_FILE_SIZE=10485760
ENABLE_WEBSOCKET=true

# Custom Endpoints for Analytic Agent
CUSTOM_ENDPOINTS=true
ANALYSIS_ENDPOINT=http://backend:8000/api/v1/analysis
CHAT_ENDPOINT=http://backend:8000/api/v1/chat

# Logging
LOG_LEVEL=info
DEBUG=false 